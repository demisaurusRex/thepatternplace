<%= simple_form_for(@instructions) do |f| %>
  <%# button to create new instruction **below appears once selected** %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :image, as: :file, input_html: { multiple: true } %>
  <%= f.input :fabric_usage, as: :file %>
  <%= f.input :sizing, as: :file %>
  <%= f.input :pdf, as: :file, input_html: { multiple: true } %>
  <%= f.submit  class: "btn btn-outline-primary"%>
  <% end %>
