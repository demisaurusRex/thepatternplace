          <%= link_to "Get started", patterns_path, class: "btn btn-light" %>
        </p>
    </div>
  </section>
  <div class="album py-5 bg-light">
    <div class="container text-center">
      <h2 class="lead">Featured patterns</h2>
    </div>
    <ul class = "list-group">
      <div>
        <div class = "container-fluid">
          <% @patterns.each do |pattern| %>
            <div class="each-card shadow p-3 mb-5 ml-3 mr-3 bg-white">
              <%= cl_image_tag pattern.image[0].key, class: 'card-img-top img-top' %>
              <div class="card-body">
                <div class="card-row">
                  <h5 class="mb-0"><%= pattern.title %></h5>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
     </ul>

  </div>
</main>
